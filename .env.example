# GapNight Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/gapnight

# ===========================================
# SERVER
# ===========================================
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000

# ===========================================
# AUTHENTICATION
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-here

# Partner portal access password
PARTNER_ACCESS_PASSWORD=your-partner-password

# ===========================================
# STRIPE PAYMENTS
# ===========================================
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# ===========================================
# EMAIL (Resend)
# ===========================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=GapNight <bookings@yourdomain.com>
